<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_to_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/rootView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activityTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/whitney"
                        android:padding="8dp"
                        android:text="@string/home_title"
                        android:textColor="#000000"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/activityDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/whitney"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:text="@string/home_subtitle"
                        android:textColor="#616161"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/mainView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:animateLayoutChanges="true"
                            android:orientation="vertical"
                            android:paddingBottom="100dp">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/searchcard"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginRight="12dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:theme="@style/Theme.MaterialComponents.Light"
                                app:cardCornerRadius="25dp"
                                app:cardElevation="0dp"
                                app:rippleColor="#EEEEEE"
                                app:strokeColor="#E0E0E0"
                                app:strokeWidth="1dp">

                                <LinearLayout
                                    android:id="@+id/searchbox"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/emoji"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_marginStart="5dp"
                                        android:padding="8dp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/icons8_search_60"
                                        app:tint="#C4C4C4" />

                                    <TextView
                                        android:id="@+id/textview49"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/whitney"
                                        android:padding="8dp"
                                        android:text="@string/home_searchbox"
                                        android:textColor="#757575"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:id="@+id/localemojisview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/textview52"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginRight="10dp"
                                    android:paddingLeft="4dp"
                                    android:paddingTop="8dp"
                                    android:paddingRight="4dp"
                                    android:paddingBottom="8dp"
                                    android:text="@string/local_emojis_title"
                                    android:textAllCaps="true"
                                    android:textColor="#424242"
                                    android:textSize="16sp" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/local_recycler"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp" />

                                <LinearLayout
                                    android:id="@+id/line1"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginRight="15dp"
                                    android:background="#E0E0E0"
                                    android:orientation="horizontal" />
                            </LinearLayout>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/pro_tip_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="10dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:theme="@style/Theme.MaterialComponents.Light"
                                android:visibility="gone"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                app:rippleColor="#4E6F8ADB"
                                app:strokeColor="#E0E0E0"
                                app:strokeWidth="1dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="10dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp">

                                    <ImageView
                                        android:id="@+id/ic_pro_tip"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="8dp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/ic_tip" />

                                    <TextView
                                        android:id="@+id/pro_tip_title"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_toEndOf="@+id/ic_pro_tip"
                                        android:fontFamily="@font/whitney"
                                        android:paddingLeft="4dp"
                                        android:paddingRight="4dp"
                                        android:paddingBottom="4dp"
                                        android:text="@string/pro_tip_title"
                                        android:textColor="#212121"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/pro_tip_desc"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/pro_tip_title"
                                        android:layout_toEndOf="@+id/ic_pro_tip"
                                        android:fontFamily="@font/whitney"
                                        android:paddingLeft="4dp"
                                        android:paddingRight="4dp"
                                        android:text="@string/pro_tip_1_desc"
                                        android:textColor="#757575"
                                        android:textSize="12sp" />


                                </RelativeLayout>


                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:id="@+id/tv_sections"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="10dp"
                                android:fontFamily="@font/whitney"
                                android:paddingLeft="4dp"
                                android:paddingTop="8dp"
                                android:paddingRight="4dp"
                                android:paddingBottom="8dp"
                                android:text="@string/home_sections_title"
                                android:textAllCaps="true"
                                android:textColor="#424242"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:id="@+id/linear30"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:baselineAligned="false"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/dock1"
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginBottom="4dp"
                                    android:layout_weight="1"
                                    android:background="#FEF3ED"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical"
                                    android:paddingLeft="8dp"
                                    android:paddingTop="10dp"
                                    android:paddingRight="8dp"
                                    android:paddingBottom="10dp">

                                    <ImageView
                                        android:id="@+id/imageview2"
                                        android:layout_width="27dp"
                                        android:layout_height="27dp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/round_emoji_emotions_black_48dp"
                                        app:tint="#F84D00" />

                                    <TextView
                                        android:id="@+id/dock_txt_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="20dp"
                                        android:fontFamily="@font/whitney"
                                        android:maxLines="1"
                                        android:text="@string/home_dock1_title"
                                        android:textColor="#212121"
                                        android:textSize="20sp"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:id="@+id/linear51"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:paddingTop="4dp">

                                        <TextView
                                            android:id="@+id/emojisCounter"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/whitney"
                                            android:maxLines="1"
                                            android:text="0"
                                            android:textColor="#757575"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="3dp"
                                            android:fontFamily="@font/whitney"
                                            android:maxLines="1"
                                            android:text="@string/home_dock1_subtitle"
                                            android:textColor="#757575"
                                            android:textSize="14sp" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/dock2"
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginEnd="4dp"
                                    android:layout_marginBottom="4dp"
                                    android:layout_weight="1"
                                    android:background="#FAECFD"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical"
                                    android:paddingLeft="8dp"
                                    android:paddingTop="10dp"
                                    android:paddingRight="8dp"
                                    android:paddingBottom="10dp">

                                    <ImageView
                                        android:id="@+id/imageview4"
                                        android:layout_width="27dp"
                                        android:layout_height="27dp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/round_category_black_48dp"
                                        app:tint="#CC01FE" />

                                    <TextView
                                        android:id="@+id/dock_txt_2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="20dp"
                                        android:fontFamily="@font/whitney"
                                        android:maxLines="1"
                                        android:text="@string/home_dock2_title"
                                        android:textColor="#212121"
                                        android:textSize="20sp"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:id="@+id/linear52"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:paddingTop="4dp">

                                        <TextView
                                            android:id="@+id/categoriesCounter"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/whitney"
                                            android:maxLines="1"
                                            android:text="0"
                                            android:textColor="#757575"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="3dp"
                                            android:fontFamily="@font/whitney"
                                            android:maxLines="1"
                                            android:text="@string/home_dock2_subtitle"
                                            android:textColor="#757575"
                                            android:textSize="14sp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linear31"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:baselineAligned="false"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/dock3"
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginBottom="4dp"
                                    android:layout_weight="1"
                                    android:background="#FFF7EC"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical"
                                    android:paddingLeft="8dp"
                                    android:paddingTop="10dp"
                                    android:paddingRight="8dp"
                                    android:paddingBottom="10dp">

                                    <ImageView
                                        android:id="@+id/imageview3"
                                        android:layout_width="27dp"
                                        android:layout_height="27dp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/round_settings_black_48dp"
                                        app:tint="#F8980B" />

                                    <TextView
                                        android:id="@+id/dock_txt_3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="20dp"
                                        android:fontFamily="@font/whitney"
                                        android:maxLines="1"
                                        android:text="@string/home_dock3_title"
                                        android:textColor="#212121"
                                        android:textSize="20sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/whitney"
                                        android:maxLines="1"
                                        android:paddingTop="4dp"
                                        android:text="@string/home_dock3_subtitle"
                                        android:textColor="#757575"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/dock4"
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginEnd="4dp"
                                    android:layout_marginBottom="4dp"
                                    android:layout_weight="1"
                                    android:background="#F4F0FF"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical"
                                    android:paddingLeft="8dp"
                                    android:paddingTop="10dp"
                                    android:paddingRight="8dp"
                                    android:paddingBottom="10dp">

                                    <ImageView
                                        android:id="@+id/imageview5"
                                        android:layout_width="27dp"
                                        android:layout_height="27dp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/round_help_black_48dp"
                                        app:tint="#4901EE" />

                                    <TextView
                                        android:id="@+id/dock_txt_4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="20dp"
                                        android:fontFamily="@font/whitney"
                                        android:maxLines="1"
                                        android:text="@string/home_dock4_title"
                                        android:textColor="#212121"
                                        android:textSize="20sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/whitney"
                                        android:maxLines="1"
                                        android:paddingTop="4dp"
                                        android:text="@string/home_dock4_subtitle"
                                        android:textColor="#757575"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/line"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="15dp"
                                android:background="#E0E0E0"
                                android:orientation="horizontal" />

                            <LinearLayout
                                android:id="@+id/gotopacks"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:animateLayoutChanges="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/whitney"
                                    android:paddingLeft="4dp"
                                    android:paddingTop="8dp"
                                    android:paddingRight="4dp"
                                    android:paddingBottom="8dp"
                                    android:text="@string/home_packs_title"
                                    android:textAllCaps="true"
                                    android:textColor="#424242"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/seeMorePacks"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="10dp"
                                    android:paddingLeft="4dp"
                                    android:paddingTop="8dp"
                                    android:paddingRight="4dp"
                                    android:paddingBottom="8dp"
                                    android:text="@string/home_packs_seemore"
                                    android:textAllCaps="true"
                                    android:textColor="#424242"
                                    android:textSize="14sp"
                                    android:visibility="invisible" />
                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/packs_recycler"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp" />

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/premium_dock"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="10dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:theme="@style/Theme.MaterialComponents.Light"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                app:rippleColor="#4E6F8ADB"
                                app:strokeColor="#E0E0E0"
                                app:strokeWidth="1dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp">

                                    <ImageView
                                        android:id="@+id/premium_img"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:background="#FAFAFA"
                                        android:padding="20dp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/ic_premium" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_weight="1"
                                        android:gravity="bottom"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/premium_title"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/whitney"
                                            android:paddingLeft="4dp"
                                            android:paddingRight="4dp"
                                            android:paddingBottom="4dp"
                                            android:text="@string/premium_title_ad"
                                            android:textColor="#212121"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/premium_desc"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/whitney"
                                            android:paddingLeft="4dp"
                                            android:paddingRight="4dp"
                                            android:text="@string/premium_mini_desc"
                                            android:textColor="#757575"
                                            android:textSize="12sp" />

                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/ic_chevron_right_grey" />
                                </LinearLayout>


                            </com.google.android.material.card.MaterialCardView>


                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/discord_dock"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="10dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:theme="@style/Theme.MaterialComponents.Light"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                app:rippleColor="#4E6F8ADB"
                                app:strokeColor="#E0E0E0"
                                app:strokeWidth="1dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp">

                                    <ImageView
                                        android:id="@+id/discord_img"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:background="#FAFAFA"
                                        android:padding="20dp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/ic_discord" />

                                    <LinearLayout
                                        android:id="@+id/linear75"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_weight="1"
                                        android:gravity="bottom"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tv_title_dock4"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/whitney"
                                            android:paddingLeft="4dp"
                                            android:paddingRight="4dp"
                                            android:paddingBottom="4dp"
                                            android:text="@string/discord_title"
                                            android:textColor="#212121"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tv_desc_dock4"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/whitney"
                                            android:paddingLeft="4dp"
                                            android:paddingRight="4dp"
                                            android:text="@string/settings_option_13_subtitle"
                                            android:textColor="#757575"
                                            android:textSize="12sp" />

                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/ic_chevron_right_grey" />
                                </LinearLayout>


                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                        <include
                            android:id="@+id/homeLoading"
                            layout="@layout/home_loading"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <LinearLayout
            android:id="@+id/adBackView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/adContainerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical" />
        </LinearLayout>

        <include
            android:id="@+id/animatedSplashView"
            layout="@layout/animated_splash_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />
    </RelativeLayout>
</LinearLayout>